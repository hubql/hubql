---
import DefaultLayout from '@hubql/ui/layouts/DefaultLayout'

// `Astro.params.slug` is passed to determine the file to render
const slug = Astro.params.slug

// Dynamically import the corresponding MDX file
const Doc = await import(`../../hubql/content/${slug}.mdx`)

// Extract frontmatter from the MDX file
const { frontmatter } = Doc
---

<DefaultLayout title={frontmatter.title} description={frontmatter.description}>
  <Doc.default />
</DefaultLayout>
